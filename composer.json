{
    "name": "harmonicdigital/ldbws",
    "description": "An implementation to consume the Live Departure Board Web Service by National Rail",
    "type": "library",
    "config": {
        "sort-packages": true
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HarmonicDigital\\Ldbws\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HarmonicDigital\\Ldbws\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Rick Ogden",
            "email": "rick@harmonicdigital.uk"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/clock": "^1.0",
        "psr/http-client": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "guzzlehttp/guzzle": "^7.10",
        "monolog/monolog": "^3.9",
        "phpunit/phpunit": "^12.4",
        "vimeo/psalm": "^6.13"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check": "vendor/bin/psalm",
        "fix": "vendor/bin/php-cs-fixer fix"
    }
}
